{
  "compilerOptions": {
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true
  },
  "include": ["__tests__/**/*", "src"],
  "exclude": ["node_modules"]
}
